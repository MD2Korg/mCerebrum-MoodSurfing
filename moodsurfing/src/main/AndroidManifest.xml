            </intent-filter>
        </activity>
        <activity android:name=".ActivityAbout"
            android:label="About"
            android:screenOrientation="portrait"/>
        <activity android:name=".ActivityLiterature"
            android:label="Literature"
            android:screenOrientation="portrait"/>
        <activity android:name=".ActivityCopyright1"
            android:label="Copyright"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".ActivityMoodSurfingExercise"
            android:label="@string/title_screen_slide"
            android:screenOrientation="portrait"
            android:uiOptions="splitActionBarWhenNarrow">
            />
        </activity>

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="1cad146ed866fa3d49c3bc8376ff52af7d9970da" />
    </application>

    <uses-permission android:name="android.permission.INTERNET" />
</manifest>
