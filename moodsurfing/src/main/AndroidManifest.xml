        android:icon="@mipmap/logo_moodsurfing"
        android:label="@string/app_name"
        android:theme="@style/AppThemeLightBlueLight"
        tools:replace="android:theme">
        <activity
            android:name=".ActivityMoodSurfingExercises"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
